-- Auto-Hop Script for Blox Fruits with Server Filtering
local HttpService = game:GetService("HttpService")
local TeleportService = game:GetService("TeleportService")
local PlaceId = game.PlaceId -- Current game's PlaceId
local hopInterval = 30 -- Time in seconds between hops
local running = true

-- Function to fetch server list
local function getServerList()
    local cursor = ""
    local servers = {}
    repeat
        local url = "https://games.roblox.com/v1/games/" .. PlaceId .. "/servers/Public?sortOrder=Asc&limit=100&cursor=" .. cursor
        local response = HttpService:GetAsync(url)
        local data = HttpService:JSONDecode(response)
        for _, server in pairs(data.data) do
            if server.playing < server.maxPlayers then
                table.insert(servers, server.id)
            end
        end
        cursor = data.nextPageCursor
    until not cursor
    return servers
end

-- Function to hop to a different server
local function hopServer()
    local currentJobId = game.JobId -- Current server ID
    local servers = getServerList()
    for _, serverId in ipairs(servers) do
        if serverId ~= currentJobId then
            print("Hopping to a new server...")
            TeleportService:TeleportToPlaceInstance(PlaceId, serverId)
            return
        end
    end
    print("No new servers found. Retrying...")
end

-- Main loop
while running do
    hopServer() -- Perform server hop
    wait(hopInterval) -- Wait 30 seconds before the next hop
end
